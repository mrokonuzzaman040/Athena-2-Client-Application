#:kivy 1.11.0

<Sidebar@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: None
    width: 80
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Button:
            size_hint_y: None
            height: 50
            on_press: app.root.current = 'dashboard'
            Image:
                source: 'assets/sideNav/home.png'
                size_hint: None, None
                size: 40, 40
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Button:
            size_hint_y: None
            height: 50
            on_press: app.root.current = 'settings'
            Image:
                source: 'assets/sideNav/settings.png'
                size_hint: None, None
                size: 40, 40
                center_x: self.parent.center_x
                center_y: self.parent.center_y
    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        Label:
            size_hint_y: None
            height: 50
    Button:
        size_hint_y: None
        height: 50
        on_press: app.root.current = 'logout'
        Image:
            source: 'assets/sideNav/logout.png'
            size_hint: None, None
            size: 40, 40
            center_x: self.parent.center_x
            center_y: self.parent.center_y

<CustomButton@Button>:
    background_normal: ''
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: 0.18, 0.19, 0.25, 1
        RoundedRectangle:
            pos: (self.pos[0] + 8, self.pos[1] - 8)
            size: self.size
            radius: [15,]
        Color:
            rgba: 0.18, 0.19, 0.25, 0.30
        Line:
            width: 2
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 15)
        Color:
            rgba: 0.23, 0.24, 0.30, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
        Color:
            rgba: 0.23, 0.24, 0.30, 0.5
        RoundedRectangle:
            pos: self.pos
            size: (self.size[0], self.size[1] / 2)
            radius: [15,]

<DashboardScreen>:
    BoxLayout:
        orientation: 'horizontal'
        Sidebar:
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint_y: None
                height: 80
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Athena-2 Client Application"
                    font_size: 24
                    color: 1, 1, 1, 1
                    bold: True
                Widget:
                BoxLayout:
                    size_hint_x: None
                    width: 200
                    orientation: 'vertical'
                    Image:
                        source: 'assets/profile.png'
                        size_hint: None, None
                        size: 50, 50
                    Label:
                        text: "Md Rokon Uzzaman"
                        font_size: 16
                        color: 1, 1, 1, 1

            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                spacing: 20
                size_hint_y: None
                height: 100
                CustomButton:
                    text: "Data Upload"
                    size_hint_y: None
                    height: 50
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'data_upload'
                CustomButton:
                    text: "Data Processing"
                    size_hint_y: None
                    height: 50
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'data_processing'
                CustomButton:
                    text: "Model Training"
                    size_hint_y: None
                    height: 50
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 0
                Label:
                    text: "System Configurations:"
                    font_size: 20
                    color: 1, 1, 1, 1
                    bold: True

                GridLayout:
                    cols: 1
                    spacing: 5
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 5
                        size_hint_y: None
                        height: 30
                        Image:
                            source: 'assets/dashboard/warning_icon.png'
                            size_hint: None, None
                            size: 30, 30
                        Label:
                            text: "Operating System: Windows 11 Pro"
                            font_size: 16
                            color: 1, 1, 1, 1
                            valign: 'middle'
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 5
                        size_hint_y: None
                        height: 30
                        Image:
                            source: 'assets/dashboard/warning_icon.png'
                            size_hint: None, None
                            size: 30, 30
                        Label:
                            text: "Processor: 3.00 GHz"
                            font_size: 16
                            color: 1, 1, 1, 1
                            valign: 'middle'
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 5
                        size_hint_y: None
                        height: 30
                        Image:
                            source: 'assets/dashboard/warning_icon.png'
                            size_hint: None, None
                            size: 30, 30
                        Label:
                            text: "Ram: 16 GB"
                            font_size: 16
                            color: 1, 1, 1, 1
                            valign: 'middle'
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 5
                        size_hint_y: None
                        height: 30
                        Image:
                            source: 'assets/dashboard/warning_icon.png'
                            size_hint: None, None
                            size: 30, 30
                        Label:
                            text: "GPU: 16 GB"
                            font_size: 16
                            color: 1, 1, 1, 1
                            valign: 'middle'

            BoxLayout:
                size_hint_y: None
                height: 50
                Label:
                    text: "Make sure you have stable internet connection"
                    font_size: 14
                    color: 1, 1, 1, 1

