<Sidebar@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: None
    width: 80
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Button:
            text: 'Home'
            size_hint_y: None
            height: 50
            on_press: app.root.current = 'dashboard'
        Button:
            text: 'Settings'
            size_hint_y: None
            height: 50
    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        Label:  # Just to push the Logout button to the bottom
            size_hint_y: None
            height: 50
    Button:
        text: 'Logout'
        size_hint_y: None
        height: 50

<DashboardScreen>:
    BoxLayout:
        orientation: 'horizontal'
        Sidebar:
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint_y: None
                height: 80
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Athena-2 Client Application"
                    font_size: 24
                    color: 1, 1, 1, 1
                    bold: True
                Widget:
                BoxLayout:
                    size_hint_x: None
                    width: 200
                    orientation: 'vertical'
                    Image:
                        source: 'assets/profile.png'
                        size_hint: None, None
                        size: 50, 50
                    Label:
                        text: "Nazmul Hossain"
                        font_size: 16
                        color: 1, 1, 1, 1

            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                spacing: 20
                size_hint_y: None
                height: 100
                Button:
                    text: "Data Upload"
                    size_hint_y: None
                    height: 50
                    background_color: 0.2, 0.2, 0.2, 1
                    color: 1, 1, 1, 1
                    on_press: app.root.current = 'data_upload'
                Button:
                    text: "Data Processing"
                    size_hint_y: None
                    height: 50
                    background_color: 0.2, 0.2, 0.2, 1
                    color: 1, 1, 1, 1
                Button:
                    text: "Model Training"
                    size_hint_y: None
                    height: 50
                    background_color: 0.2, 0.2, 0.2, 1
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 20
                Label:
                    text: "System Configurations:"
                    font_size: 20
                    color: 1, 1, 1, 1
                    bold: True

                GridLayout:
                    cols: 2
                    spacing: 10
                    Label:
                        text: "Operating System: Windows 11 Pro"
                        font_size: 16
                        color: 1, 1, 1, 1
                    Label:
                        text: "Processor: 3.00 GHz"
                        font_size: 16
                        color: 1, 1, 1, 1
                    Label:
                        text: "Ram: 16 GB"
                        font_size: 16
                        color: 1, 1, 1, 1
                    Label:
                        text: "GPU: 16 GB"
                        font_size: 16
                        color: 1, 1, 1, 1

            BoxLayout:
                size_hint_y: None
                height: 50
                Label:
                    text: "Make sure you have stable internet connection"
                    font_size: 14
                    color: 1, 1, 1, 1

